@using MultiFactor.SelfService.Windows.Portal.Helpers;
@model MultiFactor.SelfService.Windows.Portal.Models.PasswordRecovery.ResetPasswordForm

@{
    ViewBag.Title = Resources.PasswordReset.Title;
}
<div class="login change-pwd">
    <div class="form-column">
        @using (Html.BeginForm("ConfirmReset", "ForgottenPassword", FormMethod.Post))
        {
            <fieldset>
                @Html.AntiForgeryToken()
                <p>@Resources.PasswordReset.Invitation</p>
                <ul class="list">
                    <li>@Resources.PasswordChange.Req1</li>
                    <li>@Resources.PasswordChange.Req2</li>
                    <li>@Resources.PasswordChange.Req3</li>
                    <li>@Resources.PasswordChange.Req4</li>
                </ul>
                <br />
                <div>
                    @Html.ValidationSummary(true)
                    @Html.ValidationMessageFor(x => x.Identity)
                </div>
                <div class="form-row">
                    <div class="input">
                        @Html.HiddenFor(m => m.Identity)
                    </div>
                    <div class="input">
                        @Html.ToggablePasswordFor(m => m.NewPassword, new { placeholder = Resources.PasswordChange.NewPassword, autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                    <div class="input">
                        @Html.ToggablePasswordFor(m => m.NewPasswordAgain, new { placeholder = Resources.PasswordChange.ConfirmPassword, autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.NewPasswordAgain)
                    </div>
                </div>
                <div class="form-row">
                    <input type="submit" value="@Resources.PasswordReset.Submit" />
                </div>
            </fieldset>
        }
    </div>
</div>