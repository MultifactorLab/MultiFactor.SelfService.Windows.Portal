@model MultiFactor.SelfService.Windows.Portal.Models.PasswordRecovery.EnterIdentityForm

@{
    ViewBag.Title = Resources.PasswordReset.Title;
}
<div class="login change-pwd">
    <div class="form-column">
        @using (Html.BeginForm("Index", "ForgottenPassword", FormMethod.Post))
        {
            <fieldset>
                @Html.AntiForgeryToken()
                <p>@Resources.PasswordReset.Invitation</p>
                <div class="form-row">
                    <div class="input">
                        @Html.TextBoxFor(m => m.Identity, new { placeholder = Configuration.Current.RequiresUpn ? Resources.AccountLogin.UserNameUpn : Resources.AccountLogin.UserName })
                        @Html.ValidationMessageFor(m => m.Identity)
                    </div>
                    @Html.ValidationSummary(true)

                    @if (Configuration.Current.RequireCaptchaOnLogin)
                    {
                        <div class="g-recaptcha"
                             data-sitekey="@Configuration.Current.GoogleReCaptchaKey"
                             data-callback="captchaCallback"
                             data-size="normal">
                        </div>
                    }
                </div>
                <div class="form-row">
                    @if (Configuration.Current.RequireCaptchaOnLogin)
                    {
                        <input type="hidden" name="responseToken" id="responseToken" />
                        <input type="submit" class="btn" disabled="disabled" value="@Resources.PasswordReset.Next" id="submit" />
                    }
                    else
                    {
                        <input type="submit" class="btn" value="@Resources.PasswordReset.Next" id="submit" />
                    }
                </div>
            </fieldset>
        }
    </div>
</div>